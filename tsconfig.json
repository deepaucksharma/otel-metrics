{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": false,
    "skipLibCheck": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@intellimetric/contracts": ["../packages/contracts"],
      "@intellimetric/contracts/*": ["../packages/contracts/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}